<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dne_noc"
    tools:context=".LoginActivity"
    android:id="@+id/login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="243dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/kc"
        android:text="Kwazy Cupcakes"
        android:textSize="50dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:fontFamily="cursive"
        android:textColor="@color/pink"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/username"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/getpassword"
        android:layout_marginBottom="40dp"
        android:background="#51FF0070"
        android:drawableLeft="@drawable/ic_action_username"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@color/pink"
        android:textColorHint="@android:color/white"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/getpassword"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/rl_btn"
        android:layout_marginBottom="20dp"
        android:background="#51FF0070"
        android:drawableLeft="@drawable/ic_action_name_passw"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/pink"
        android:textColorHint="@android:color/white"
        android:textSize="18dp" />


    <RelativeLayout
        android:id="@+id/rl_btn"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="72dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register"
            android:layout_width="131dp"
            android:layout_height="34dp"
            android:layout_below="@+id/login_but"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:gravity="center"
            android:text="Register here..."
            android:textColor="@android:color/holo_red_dark"
            android:layout_alignParentBottom="true"
            />


        <Button
            android:id="@+id/login_but"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="59dp"
            android:layout_marginRight="59dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:fontFamily="cursive"
            android:text="Login" />

    </RelativeLayout>
</RelativeLayout>